<Page
    x:Class="Chairman_Client.Pages.LetterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chairman_Client.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LetterPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel
                x:Name="leftLettersList"
                Grid.Column="0"
                Margin="10"
                Orientation="Vertical">
                <StackPanel>
                    <TextBlock FontSize="18" Text="Заголовок" />
                    <TextBlock FontSize="15" Text="Текс письма" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>


        <StackPanel
            Grid.Column="1"
            Width="1"
            Background="Gray" />

        <Frame
            x:Name="letterReaderFrame"
            Grid.Column="2"
            Background="AliceBlue"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
