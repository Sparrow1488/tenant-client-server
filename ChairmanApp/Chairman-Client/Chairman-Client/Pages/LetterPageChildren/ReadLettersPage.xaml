<Page
    x:Class="Chairman_Client.Pages.LetterPageChildren.ReadLettersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chairman_Client.Pages.LetterPageChildren"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ReadLettersPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="AliceBlue"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="letterButtons">
            <Setter Property="ItemsControl.BorderBrush" Value="Transparent" />
            <Setter Property="ItemsControl.Background" Value="Transparent" />
        </Style>
    </Page.Resources>

    <Grid Margin="20,0,20,0" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="90" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="50,0,50,0"
            VerticalAlignment="Center">
            <TextBlock
                FontSize="24"
                Text="Заголовок письма"
                TextWrapping="Wrap" />
            <TextBlock FontSize="16" Text="Тип: тип_письма" />
            <TextBlock FontSize="16" Text="От кого: asd" />
        </StackPanel>
        <!--  СОНОВНОЙ КОНТЕНТ  -->
        <StackPanel
            Grid.Row="1"
            Margin="50,0,50,0"
            Orientation="Vertical">
            <StackPanel Height="1" Background="Black" />
            <TextBlock
                FontSize="24"
                FontWeight="DemiBold"
                Text="Очередной заголовок письма аряяя" />
            <TextBox
                BorderBrush="Transparent"
                FontSize="20"
                Text="Самое длинное в мире письмо которое вообще вообще вообще вообще вообще вообще вообще вообще не хочется читать!"
                TextWrapping="Wrap" />
            <StackPanel
                Height="1"
                Margin="100,0"
                Background="Black" />
            <WrapPanel Margin="0,10" Orientation="Horizontal">
                <Button
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Content="Ответить"
                    FontSize="18"
                    Style="{StaticResource letterButtons}" />
                <Button
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Content="Удалить"
                    FontSize="18"
                    Style="{StaticResource letterButtons}" />
                <Button
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Content="Оставить непрочитанным"
                    FontSize="18"
                    Style="{StaticResource letterButtons}" />
                <Button
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Content="Важное"
                    FontSize="18"
                    Style="{StaticResource letterButtons}" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
