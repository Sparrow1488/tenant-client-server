<Page
    x:Class="Chairman_Client.Pages.NewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chairman_Client.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button
                Click="AddNewsBtn_Click"
                Content="Новая публикация"
                FontSize="20" />
        </WrapPanel>

        <StackPanel Grid.Row="1">
            <StackPanel Width="400">
                <TextBlock
                    FontSize="22"
                    FontWeight="DemiBold"
                    Text="Заголовок" />
                <TextBlock
                    FontSize="18"
                    Text="Мега длинный длинный длинный длинный текст"
                    TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
