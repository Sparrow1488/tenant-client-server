<Page
    x:Class="MVVM_Pattern_Test.Pages.HomePages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVM_Pattern_Test.Pages.HomePages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="titleStyler">
            <Setter Property="ItemsControl.Foreground" Value="White" />
            <Setter Property="ItemsControl.FontSize" Value="20" />
            <Setter Property="ItemsControl.Margin" Value="20 4" />
        </Style>
    </Page.Resources>

    <Grid>
        <Border>
            <StackPanel x:Name="mainPanel">
                <WrapPanel x:Name="header" Background="Gray">
                    <TextBlock Style="{StaticResource titleStyler}" Text="Настройки" />
                </WrapPanel>

                <StackPanel>
                    <WrapPanel Background="Gray">
                        <TextBlock Style="{StaticResource titleStyler}" Text="Путь сохранения файлов" />
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
