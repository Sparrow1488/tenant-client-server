<Window
    x:Class="MVVM_Pattern_Test.Views.HomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVM_Pattern_Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MVVM_Pattern_Test.ViewModels"
    Title="Главная"
    Width="1200"
    Height="800"
    MinWidth="1050"
    MinHeight="550"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="leftMenuBtn">
            <Setter Property="ItemsControl.Background" Value="AliceBlue" />
            <Setter Property="ItemsControl.BorderBrush" Value="Transparent" />
            <Setter Property="ItemsControl.Padding" Value="5" />
            <Setter Property="ItemsControl.FontSize" Value="25" />
            <Setter Property="ItemsControl.FontFamily" Value="Calibri Light" />
        </Style>
        <Style x:Key="iconLeftMenu">
            <Setter Property="ItemsControl.Width" Value="35" />
            <Setter Property="ItemsControl.Margin" Value="0 0 5 0" />
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel Margin="50,0,0,0">
            <Frame
                x:Name="ProfilePageFrame"
                Content="{Binding ActivePage}"
                NavigationUIVisibility="Hidden" />
        </DockPanel>

        <StackPanel
            x:Name="menuLeftPanel"
            Width="50"
            HorizontalAlignment="Left"
            Background="AliceBlue"
            Orientation="Vertical">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            To="50"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Width"
                                            To="250"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <StackPanel Height="80">
                <StackPanel.Background>
                    <ImageBrush ImageSource="/refs/BG-4_1920x1080.jpg" Stretch="UniformToFill" />
                </StackPanel.Background>
            </StackPanel>

            <Button
                HorizontalContentAlignment="Left"
                Command="{Binding ShowProfilePage}"
                Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\profileIcon.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Grid.Column="1" Text="Профиль" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                HorizontalContentAlignment="Left"
                Command="{Binding ShowNewsPage}"
                Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\noticeIcon.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Text="Лента" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                Name="viewWriteNewsBtn"
                HorizontalContentAlignment="Left"
                Command="{Binding ShowAdminNewsWriterPage}"
                Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\write/write-letter.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Text="Новое объявление" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                Name="viewAllLettersBtn"
                HorizontalContentAlignment="Left"
                Command="{Binding ShowAdminReaderPage}"
                Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\mail\mail.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Text="Почтовый ящик" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button
                HorizontalContentAlignment="Left"
                Command="{Binding ShowLettersPage}"
                Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\send\send-letter.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Text="Отправить письмо" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button HorizontalContentAlignment="Left" Style="{StaticResource leftMenuBtn}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Image
                            Grid.Column="0"
                            Source="/refs\icons\settingsIcon.png"
                            Style="{StaticResource iconLeftMenu}" />
                        <TextBlock Text="Настройки" />
                    </StackPanel>
                </Grid>
            </Button>

        </StackPanel>

        <DockPanel
            Grid.Column="2"
            Height="20"
            VerticalAlignment="Bottom"
            Background="White">
            <DockPanel.Style>
                <Style TargetType="{x:Type DockPanel}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Height"
                                            To="80"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="Height"
                                            To="20"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>
            <StackPanel
                Height="1"
                Background="Black"
                DockPanel.Dock="Top" />
            <WrapPanel
                Name="bottomPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    Margin="10,20"
                    Padding="10,2"
                    Content="Мы VK"
                    FontSize="24" />
                <Button
                    Margin="10,20"
                    Padding="10,2"
                    Content="Мы на TouTube"
                    FontSize="24" />
                <Button
                    Margin="10,20"
                    Padding="10,2"
                    Content="Мы в Tweeter"
                    FontSize="24" />
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
