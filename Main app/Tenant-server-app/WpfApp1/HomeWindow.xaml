<Window x:Class="WpfApp1.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Vertical"
                    Background="AliceBlue"
                    Grid.Column="0">
            <StackPanel Background="#A2E8EC">
                <TextBlock Text="MyApp"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           FontFamily="Comic Sans MS"
                           Margin="3"/>
            </StackPanel>
            
            <Button Content="Profile"
                    FontSize="22"
                    Background="AliceBlue"
                    Foreground="Black"
                    BorderBrush="Transparent"
                    Click="profileBtn_Click"/>
            <Button Content="Notice"
                    FontSize="22"
                    Background="AliceBlue"
                    Foreground="Black"
                    BorderBrush="Transparent"/>
            <Button Content="Messanger"
                    FontSize="22"
                    Background="AliceBlue"
                    Foreground="Black"
                    BorderBrush="Transparent"/>
        </StackPanel>
        <DockPanel Grid.Column="1">
            <Frame x:Name="ProfilePageFrame"/>
        </DockPanel>
    </Grid>
</Window>
