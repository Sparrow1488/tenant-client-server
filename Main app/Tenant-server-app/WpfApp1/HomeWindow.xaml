<Window x:Class="WpfApp1.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="HomeWindow" Height="800" Width="1200"
        MinWidth="460"
        Loaded="Window_Loaded">
    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Background="LightGray">
            <Button FontSize="30"
                    Background="AliceBlue"
                    FontWeight="DemiBold"
                    Foreground="Black"
                    BorderBrush="Transparent"
                    Click="profileBtn_Click">
                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="C:\Users\DOM\Desktop\ИЛЬЯ\HTML\C#\tenant-client-server\Main app\Tenant-server-app\WpfApp1\refs\icons\profileIcon.png"
                           VerticalAlignment="Center"
                           Width="30"/>-->
                    <TextBlock Text="Профиль"/>
                </StackPanel>
            </Button>
            <Button FontSize="30"
                    Background="AliceBlue"
                    FontWeight="DemiBold"
                    Foreground="Black"
                    BorderBrush="Transparent"
                    Click="noticeBtn_Click">
                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="C:\Users\DOM\Desktop\ИЛЬЯ\HTML\C#\tenant-client-server\Main app\Tenant-server-app\WpfApp1\refs\icons\noticeIcon.png"
                           VerticalAlignment="Center"
                           Width="30"/>-->
                    <TextBlock Text="Новости"/>
                </StackPanel>
            </Button>
            <Button FontSize="30"
                    FontWeight="DemiBold"
                    Background="AliceBlue"
                    Foreground="Black"
                    BorderBrush="Transparent">
                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="C:\Users\DOM\Desktop\ИЛЬЯ\HTML\C#\tenant-client-server\Main app\Tenant-server-app\WpfApp1\refs\icons\chatIcon.png"
                           VerticalAlignment="Center"
                           Width="30"/>-->
                    <TextBlock Text="Написать"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <DockPanel Grid.Row="1">
            <Frame x:Name="ProfilePageFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
