<Page
    x:Class="WpfApp1.Pages.HomePages.ChildLetterPage.ComplaintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages.HomePages.ChildLetterPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ComplaintPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="mainPanel" Margin="10">
                <TextBlock
                    FontSize="24"
                    FontWeight="DemiBold"
                    Text="Опишите вашу проблему"
                    TextWrapping="Wrap" />
                <GroupBox FontSize="20" Header="Заголовок">
                    <TextBox
                        x:Name="titleLetter"
                        Padding="5"
                        BorderBrush="Transparent"
                        Focusable="True"
                        FontSize="20"
                        TextWrapping="Wrap" />
                </GroupBox>

                <GroupBox FontSize="20" Header="Описание">
                    <TextBox
                        x:Name="descriptionLetter"
                        Padding="5"
                        BorderBrush="Transparent"
                        Focusable="True"
                        FontSize="20"
                        Text="Ваша проблема..."
                        TextWrapping="Wrap" />
                </GroupBox>

                <Button
                    x:Name="sendLetterBtn"
                    Margin="0,10"
                    Padding="5"
                    Background="Wheat"
                    Click="sendLetterBtn_Click"
                    Content="Отправить"
                    FontSize="24"
                    Foreground="White" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
