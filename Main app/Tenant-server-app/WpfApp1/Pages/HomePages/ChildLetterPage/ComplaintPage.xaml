<Page
    x:Class="WpfApp1.Pages.HomePages.ChildLetterPage.ComplaintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Pages.HomePages.ChildLetterPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ComplaintPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="mainPanel" Margin="10">
                <TextBlock
                    FontSize="24"
                    FontWeight="DemiBold"
                    Text="Опишите вашу проблему"
                    TextWrapping="Wrap" />
                <TextBox
                    Padding="5"
                    Focusable="True"
                    FontSize="20"
                    Text="Описание самой мощной, самой ужаснейшей и нерешаемейшей задачи, которую никто никогда не решит, сори"
                    TextWrapping="Wrap" />
                <Button
                    Padding="5"
                    Content="Отправить"
                    FontSize="24" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
