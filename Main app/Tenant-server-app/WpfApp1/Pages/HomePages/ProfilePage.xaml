<Page
    x:Class="WpfApp1.Pages.HomePages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Server.Packages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProfilePage"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    Background="#F4F6F7"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="mainProfilePanel" Grid.Column="1">
            <StackPanel
                x:Name="profileInfoPanel"
                Height="Auto"
                Margin="20"
                Background="#B0FF99">
                <WrapPanel
                    Width="Auto"
                    Margin="20"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="loginInfo"
                        FontSize="28"
                        Foreground="#C70039  "
                        Text="Логин: " />
                    <TextBlock
                        x:Name="lastNameInfo"
                        FontSize="28"
                        Text="Фамилия: " />
                    <TextBlock
                        x:Name="nameInfo"
                        FontSize="28"
                        Text="Имя: " />
                    <TextBlock
                        x:Name="secondNameInfo"
                        FontSize="28"
                        Text="Отчество: " />
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
